/* Global variables */
$orange: #DC5A24;
$blue: #45A1C6;
$darkgray: #333333;
$gray: #666666;
$lightgray: #DDDDDD;

body {
  line-height: 1.8em !important;
  background:url('<%= asset_path "bg_body-noise.png" %>') repeat;
  text-shadow: 0.5px 0.5px 0 rgba(240, 240, 240, 1);
