/* ============================= */
/* ! Portrait tablet  */
/* ============================= */
@media only screen and (max-width: 768px) {
  body {
    .search-query:focus {
      width:100px !important;
    }
  }
}

/* ============================= */
/* ! Layout for tablet  */
/* ============================= */
@media only screen and (max-width: 1024px) {
  body {
    .sections {
      .section {
        &:nth-child(even) > .col:last-child {
          float: left;
          width: 400px;
          margin-left: 30px;
        }
        .discover {
          width: 379px !important;
        }
      }
    }
    .search-query:focus {
      width:206px !important;
    }
  }
}
/* ============================= */
/* ! Small desktop  */
/* ============================= */
@media (max-width: 1200px) {
  body {
    .g_three_col {
      .g_main {
        padding: 30px 30px 0 0;
        margin: 0 0 0 225px;
      }
    }
  }
}
