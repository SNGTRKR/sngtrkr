popover_triggers = ->
    #popovers for buy and share
    $(".share, .buy").click ->
      $(@).toggleClass "active"

    $("body").on "click", ".popover a", ->
      $(".share, .buy").each ->
        $(@).popover "hide"
        $(@).removeClass "active"

    $("body").on "click", (e) ->
      $(".share, .buy").each ->
        if not ($(@).is(e.target) or $(@).has(e.target).length > 0) and $(@).siblings(".popover").length isnt 0 and $(@).siblings(".popover").has(e.target).length is 0
