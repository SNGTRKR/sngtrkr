<% if user_signed_in?%>
<% if current_user.following? trk_artist.id %>
<%= link_to unfollow_artist_path(trk_artist), :remote => true do %><div class="artist-trkr-search o-button"><i class="icon-minus"></i></div><% end %>
<% else %>
<%= link_to follow_artist_path(trk_artist), :remote => true do %><div class="artist-trkr-search o-button"><i class="icon-plus"></i></div><% end %>
<% end %>
<% elsif %>
<a href="<%= user_omniauth_authorize_path(:facebook) %>"><div class="artist-trkr-search o-button"><i class="icon-signin"></i></div></a>
<% end %>
