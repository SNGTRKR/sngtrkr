<div class="art_pop art_pop_<%= apop.id %>">
  <div class="share_content">
    <div>
      <a href="#" title="Share on Facebook" onClick="MyWindow=window.open('https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.sngtrkr.com<%= url_for apop %>%2F&t=SNGTRKR','ShareSNGTRKRonFacebook','scrollbars=no,width=620,height=340'); return false;">
        <span class="facebook"></span>
      </a>
      <a href="#" title="Share on Twitter" onClick="MyWindow=window.open('https://twitter.com/intent/tweet?original_referer=http%3A%2F%2Fwww.sngtrkr.com&text=<%= apop.name %>+is+using+SNGTRKR+to+keep+their+fans+up+to+date+with+releases.+Check+them+out+&#45;+www.sngtrkr.com<%= url_for apop %>&via=SNGTRKR','ShareSNGTRKRonTwitter','scrollbars=no,width=620,height=340'); return false;">
        <span class="twitter"></span>
      </a>
      <a href="#" title="Share on Tumblr" onClick="MyWindow=window.open('http://www.tumblr.com/share/link?url=http%3A%2F%2Fwww.sngtrkr.com<%= url_for apop %>&name=<%= apop.name %>&description=<%= apop.name %> online:<br/><% if apop.fbid? %>http://www.facebook.com/<%= apop.fbid %><br/><% end %><% if apop.twitter? %>http://www.twitter.com/<%= apop.twitter %><br/><% end %><% if apop.youtube? %>http://www.youtube.com/<%= apop.youtube %><br/><% end %><% if apop.soundcloud? %>http://www.soundcloud.com/<%= apop.soundcloud %><br/><% end %><% if apop.website? %><%= apop.website %><% end %>','Share on Tumblr','scrollbars=no,width=620,height=340'); return false;">
        <span class="tumblr"></span>
      </a>
      <a href="#" title="Share on Google Plus" onClick="MyWindow=window.open('https://plus.google.com/share?url=http%3A%2F%2Fwww.sngtrkr.com<%= url_for apop %>','ShareSNGTRKRonGooglePlus','scrollbars=no,width=620,height=340'); return false;">
        <span class="googleplus"></span>
      </a>
    </div>
    <span class="link">Link:</span>
    <input type="text" onClick="this.select();" value="<%= root_url.chomp('/') %><%= artist_path(apop) %>">
  </div>
</div>