<% friend_trk_class ||= nil %>
<% friend_untrk_class ||= nil %>
<% if user_signed_in?%>
<% if current_user.following? trk_artist.id %>
<div class="o-button trkr-o-pad artist-remove-o-pad right instruct-font font-13">
	<%= link_to 'REMOVE TRKR', unfollow_artist_path(trk_artist), :remote => true, :class => 'remove-trkr #{friend_untrk_class}' %><span></span>
</div>
<% else %>
<div class="o-button trkr-o-pad right instruct-font font-13">
	<%= link_to 'ADD TRKR', follow_artist_path(trk_artist), :remote => true, :class => 'add-trkr #{friend_trk_class}'  %><span></span>
</div>
<% end %>
<% elsif %>
<div class="o-button trkr-o-pad right instruct-font font-13">
	<a href="<%= user_omniauth_authorize_path(:facebook) %>">LOGIN TO TRK</a><span></span>
</div>
<% end %>
