                  <img src="<%= artist.image.medium %>" class="image" height="110" width="110"/>
                <% end %>
                <span>
                  <div><%= link_to artist.name, artist %></div>
                  <%= artist.label_name %><br/>
                  <%= artist.followers %> trackers
