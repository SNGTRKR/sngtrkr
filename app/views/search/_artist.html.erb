              <div class="result">
                <%= link_to artist do %>
                  <img src="<%= artist.image.medium %>" class="image" height="110" width="110"/>
                <% end %>
                <span>
                  <div><%= link_to artist.name, artist %></div>
                  <%= artist.label_name %><br/>
                  <%= artist.followers %> trackers
                </span>
                <%= follow_button_small artist %>
                <div class="btn btn-small share_artist share" data-placement="bottom" id="<%= artist.id %>"><i class="icon-share"></i>Share</div>
                <div class="art_pop art_pop_<%= artist.id %>">
                  <div class="share_content">
                    <div>
                      <a href="#" title="Share on Facebook" onClick="MyWindow=window.open('https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.sngtrkr.com<%= url_for artist %>%2F&t=SNGTRKR','ShareSNGTRKRonFacebook','scrollbars=no,width=620,height=340'); return false;">
                        <%= image_tag "/images/social/fb.png", :alt => "Facebook" %>
                      </a>
                      <a href="#" title="Share on Twitter" onClick="MyWindow=window.open('https://twitter.com/intent/tweet?original_referer=http%3A%2F%2Fwww.sngtrkr.com&text=<%= artist.name %>+is+using+SNGTRKR+to+keep+their+fans+up+to+date+with+releases.+Check+them+out+&#45;+www.sngtrkr.com<%= url_for artist %>&via=SNGTRKR','ShareSNGTRKRonTwitter','scrollbars=no,width=620,height=340'); return false;">
                        <%= image_tag "/images/social/twitter.png", :alt => "Twitter" %>
                      </a>
                      <a href="#" title="Share on Tumblr" onClick="MyWindow=window.open('http://www.tumblr.com/share/link?url=http%3A%2F%2Fwww.sngtrkr.com<%= url_for artist %>&name=<%= artist.name %>&description=<%= artist.name %> online:<br/><% if artist.fbid? %>http://www.facebook.com/<%= artist.fbid %><br/><% end %><% if artist.twitter? %>http://www.twitter.com/<%= artist.twitter %><br/><% end %><% if artist.youtube? %>http://www.youtube.com/<%= artist.youtube %><br/><% end %><% if artist.soundcloud? %>http://www.soundcloud.com/<%= artist.soundcloud %><br/><% end %><% if artist.website? %><%= artist.website %><% end %>','Share on Tumblr','scrollbars=no,width=620,height=340'); return false;">
                        <%= image_tag "/images/social/tb.png", :alt => "Tumblr" %>
                      </a>
                      <a href="#" title="Share on Google Plus" onClick="MyWindow=window.open('https://plus.google.com/share?url=http%3A%2F%2Fwww.sngtrkr.com<%= url_for artist %>','ShareSNGTRKRonGooglePlus','scrollbars=no,width=620,height=340'); return false;">
                        <%= image_tag "/images/social/gplus.png", :alt => "Google+" %>
                      </a>
                    </div>
                    <span>Link:</span>
                    <input type="text" onClick="this.select();" value="<%= root_url %><%= url_for(artist) %>">
                  </div>
                </div>
              </div>