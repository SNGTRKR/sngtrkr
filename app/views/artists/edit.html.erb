<script>
	$(document).ready(function() {
		$(".manage-artist").click(function() {
			$(".step-back").animate({
				height : 134
			}, "slow");
			$(".step").animate({
				height : 222
			}, "slow");
			$("#progress").animate({
				width : 65
			}, "slow");
			$('.percent').html('25%');

		});
