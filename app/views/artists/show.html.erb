<% content_for :og_name, @artist.name 
content_for :og_url, request.url
content_for :og_image, "" 
content_for :og_description, @artist.name + " is available now on SNGTRKR"
content_for :og_id, @artist.id.to_s

%>
<style type="text/css">
#artist-image {
	
}
</style>
<div class="content content-pad-191">
	<div id="content-artist">
        <div id="artist-image" style="">
        	<div id="outer-button">
        		<div class="inner-button">
        			<% if(user_signed_in?) %>
        			<% if @user.following? @artist.id %>
					<div class="o-button artist-remove-o-pad left instruct-font"><%= link_to 'REMOVE TRKR', unfollow_artist_path(@artist) %><span></span></div>
					<% else %>
					<div class="o-button artist-add-o-pad left instruct-font"><%= link_to 'ADD TRKR', follow_artist_path(@artist) %><span></span></div>
					<% end %>
					<% elsif %>
					<div class="o-button artist-login-o-pad left instruct-font"><a href="<%= user_omniauth_authorize_path(:facebook) %>">LOGIN TO TRK</a><span></span></div>
					<% end %>
        			</div>
        		</div>
        </div>
        <div id="artist-info">
        	<h2 class="font-18 artist-name instruct-font"><%= @artist.name %></h2>
        	<img src="/assets/images/record-label.png"><span class="genre-logo-nudge">Tempa</span>
        	<span id="genre-nudge"><img src="/assets/images/genre.png"><span class="genre-logo-nudge"><%= @artist.genre %></span></span>
        	<div id="artist-bio"><%= @artist.bio.truncate(550) %> <strong>Continue Reading</strong></div>
        	</div>
        	        	<ul>
        		<li class="social-spacing"><img src="/assets/images/a-fb.png"></li>
				<li class="social-spacing"><img src="/assets/images/a-twit.png"></li>
				<li class="social-spacing"><a href="http://www.soundcloud.com/<%= @artist.soundcloud %>" target="_blank"><img src="/assets/images/a-sc.png"></a></li>
				<li class="social-spacing"><a href="<%= @artist.website %>" target="_blank"><img src="/assets/images/a-web.png"></a></li>
				<li class="social-spacing"><a href="http://www.youtube.com/<%= @artist.youtube %>" target="_blank"><img src="/assets/images/a-yt.png"></a></li>
				<li class="social-spacing"><img src="/assets/images/a-it.png"></li>
				<li class="social-spacing"><img src="/assets/images/a-amaz.png"></li>
				<li><img src="/assets/images/a-7d.png"></li>
        	</ul>
        </div>
