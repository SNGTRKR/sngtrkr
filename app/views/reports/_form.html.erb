<%= form_for(@report, :validate => true) do |f| %>
    <%= f.hidden_field :url, :value => "http://#{request.host}:#{request.port}#{request.fullpath}" %>

    <%= f.label :elements %>
    <%= f.text_field :elements %>

    <%= f.label :comments %>
    <%= f.text_area :comments %>

    <%= f.submit "Send", :class => 'btn' %>
<% end %>
