<% css ||= 'mini-search' %>
<div class="<%= css %>">
  <%= form_tag artists_path , :method => 'get' do %>
  <%= text_field_tag(:mini_search_field, params[:search], :autocomplete => 'off', :placeholder => "Search artists...") %>
  <div class="search right search-button">
    <%= link_to (image_tag "/images/white-search-2.png", :alt => "Search", :id => "search-pad"), "#submit", :id => 'artist-mini-search-submit' %>
  </div>
  <ul id="mini_search_results" class="results">
    <li><a>Start typing for results...</a></li>
  </ul>
  <% end %>
</div>