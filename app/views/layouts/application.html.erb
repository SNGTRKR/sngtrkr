<div id="more_info">
  <div class="container">
    <div class="row-fluid">
      <div class="
        <%= "offset1" unless user_signed_in? and admin? %> span2">
        <a href="/about">
          <div class="about"></div>
          <h4>About</h4>
        </a>
      </div>
      <% cache "second_menu", expires_in: 2.weeks do %>
          <div class="span2">
            <a href="http://blog.sngtrkr.com" target="_blank" data-tracking="true" data-tracking-category="navbar" data-tracking-name="blog">
              <i class="icon-rss"></i>
              <h4>Blog</h4>
            </a>
          </div>
          <div class="span2">
            <a href="http://support.sngtrkr.com" target="_blank" data-tracking="true" data-tracking-category="navbar" data-tracking-name="support">
              <div class="support"></div>
              <h4>Support</h4>
            </a>
          </div>
          <div class="span2">
            <a href="/terms" data-tracking="true" data-tracking-category="navbar" data-tracking-name="terms">
              <i class="icon-file-alt"></i>
              <h4>Terms</h4>
            </a>
          </div>
          <div class="span2">
            <a href="/privacy" data-tracking="true" data-tracking-category="navbar" data-tracking-name="privacy">
              <i class="icon-lock"></i>
              <h4>Privacy</h4>
            </a>
          </div>
      <% end %>
      <% if user_signed_in? %>
          <% if admin? %>
              <div class="span2">
                <a href="/admin">
                  <i class="icon-wrench"></i>
                  <h4>Adminstration</h4>
                </a>
              </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>
<header role="banner">
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <% if current_user %>
          <%= link_to timeline_path, :class => "brand", 'data-tracking' => 'true', 'data-tracking-category' => 'navbar', 'data-tracking-name' => 'root-timeline' do %>
              <div class="sngtrkr_logo"></div>
          <% end %>
      <% else %>
          <%= link_to :root, :class => "brand", 'data-tracking' => 'true', 'data-tracking-category' => 'navbar', 'data-tracking-name' => 'root-home' do %>
              <div class="sngtrkr_logo"></div>
          <% end %>
      <% end %>
      <ul class="nav">
        <li class="divider-vertical"></li>
        <% if current_user %>
            <li class="<%= active_page(timeline_path) %>"><%= link_to timeline_path, 'data-tracking' => 'true', 'data-tracking-category' => 'navbar', 'data-tracking-name' => 'timeline' do %>Timeline<% end %></li>
            <li class="divider-vertical"></li>
        <% end %>
            <li class="<%= active_page(explore_path) %>"><%= link_to explore_path, 'data-tracking' => 'true', 'data-tracking-category' => 'navbar', 'data-tracking-name' => 'explore' do %>Explore<% end %></li>
            <li class="divider-vertical"></li>
        <% if current_user %>
            <li class="<%= active_page(user_path(current_user)) %>">
              <%= link_to user_path(current_user), 'data-tracking' => 'true', 'data-tracking-category' => 'navbar', 'data-tracking-name' => 'profile' do %>
                  Profile
              <% end %>
            </li>
            <li class="divider-vertical"></li>
        <% end %>
      </ul>

      <%= form_tag search_path, :method => 'get', :class => "navbar-search pull-left" do %>
          <%= text_field_tag(:query, params[:query], :autocomplete => 'off', :tabindex => "1", :placeholder => "Find artists and releases", :class => 'search-query') %>
          <%= link_to "#submit", 'data-tracking' => 'true', 'data-tracking-category' => 'navbar', 'data-tracking-name' => 'search' do %>
              <i class="icon-search"></i>
          <% end %>
      <% end %>
      <ul class="nav pull-right">
        <li class="divider-vertical"></li>
        <li>
          <% if !current_user %>
              <a data-toggle="modal" data-target="#user_login" class="login" data-tracking="true" data-tracking-category="navbar" data-tracking-name="login">
                Login
              </a>
          <% else %>
              <%= link_to destroy_user_session_path, :method => :delete, 'data-tracking' => 'true', 'data-tracking-category' => 'navbar', 'data-tracking-name' => 'logout' do %>
                  Logout
              <% end %>
          <% end %>
        </li>
        <li class="divider-vertical"></li>
        <% if !current_user %>
            <li>
              <a data-toggle="modal" data-target="#user_signup" class="signup" data-tracking="true" data-tracking-category="navbar" data-tracking-name="signup">
                <div class="btn btn-warning">Sign up</div>
              </a>
            </li>
            <li class="divider-vertical"></li>
        <% end %>
        <li id="show_info"><a data-tracking="true" data-tracking-category="navbar" data-tracking-name="open-info">Info</a></li>
        <li class="divider-vertical buffer"></li>
      </ul>
    </div>
    <!-- /navbar-inner -->
  </div>
</header>
<div class="g_content" role="main">
  <% if flash[:notice] or flash[:error] or flash[:success] %>
      <div class="alert animated
        <% if flash[:success] then %>alert-success
        <% end %>
        <% if flash[:notice] then %>alert-info
        <% end %>
        <% if flash[:error] then %>alert-error
        <% end %>">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <% if flash[:error] and !flash[:notice] %>
            <%= raw flash[:error] %>
        <% end %>
        <%= raw flash[:notice] %>
        <%= raw flash[:success] %>
      </div>
  <% end %>
  <%= yield %>
</div>
<div id="footer">
</div>
<% if !current_user %>
    <div class="modal hide fade" id="user_signup">
      <div class="modal-body">
        <div class="top">
          <%= link_to user_omniauth_authorize_path(:facebook), :class => "btn btn-primary btn-fb-large btn-large", 'data-tracking' => 'true', 'data-tracking-category' => 'navbar', 'data-tracking-name' => 'signup-fb-signin' do %>
              <div class="icon"><span></span><i class="icon-facebook"></i></div>
              <div class="divider"></div>
              Sign up with Facebook
          <% end %>
        </div>
      </div>
    </div>
    <div class="modal hide fade" id="user_login">
      <div class="modal-body">
        <div class="top">
          <%= link_to user_omniauth_authorize_path(:facebook), :class => "btn btn-primary btn-fb-large btn-large", 'data-tracking' => 'true', 'data-tracking-category' => 'navbar', 'data-tracking-name' => 'login-fb-signin' do %>
              <div class="icon"><span></span><i class="icon-facebook"></i></div>
              <div class="divider"></div>
              Sign in with Facebook
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
