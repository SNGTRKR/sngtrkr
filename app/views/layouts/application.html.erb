<header role="banner">
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <% if current_user %>
          <%= link_to timeline_path, :class => "brand" do %>
              <div class="sngtrkr_logo"></div>
          <% end %>
      <% else %>
          <%= link_to :root, :class => "brand" do %>
              <div class="sngtrkr_logo"></div>
          <% end %>
      <% end %>
      <ul class="nav">
        <li class="divider-vertical"></li>
        <% if current_user %>
            <li class="
              <% if current_page?(timeline_path) %>active
              <% end %>"><%= link_to timeline_path do %>Timeline<% end %></li>
            <li class="divider-vertical"></li>
        <% end %>
            <li class="<% if current_page?(explore_path) %>active
              <% end %>"><%= link_to explore_path do %>Explore<% end %></li>
            <li class="divider-vertical"></li>
        <% if current_user %>
            <li class="
              <% if current_page?(user_path(current_user)) %>active
              <% end %>">
              <%= link_to user_path(current_user) do %>
                  Profile
              <% end %>
            </li>
            <li class="divider-vertical"></li>
        <% end %>
      </ul>

      <%= form_tag search_path, :method => 'get', :class => "navbar-search pull-left" do %>
          <%= text_field_tag(:query, params[:query], :autocomplete => 'off', :tabindex => "1", :placeholder => "Find artists and releases", :class => 'search-query') %>
          <%= link_to "#submit" do %>
              <i class="icon-search"></i>
          <% end %>
      <% end %>
      <ul class="nav pull-right">
        <li class="divider-vertical"></li>
        <li>
          <% if !current_user %>
              <a data-toggle="modal" data-target="#user_login" class="login">
                Login
              </a>
          <% else %>
              <%= link_to(destroy_user_session_path, :method => :delete) do %>
                  Logout
              <% end %>
          <% end %>
        </li>
        <li class="divider-vertical"></li>
        <% if !current_user %>
            <li>
              <a data-toggle="modal" data-target="#user_signup" class="signup">
                <div class="btn btn-warning">Sign up</div>
              </a>
            </li>
            <li class="divider-vertical"></li>
        <% end %>
        <li id="show_info"><a>Info</a></li>
        <li class="divider-vertical buffer"></li>
      </ul>
    </div>
    <!-- /navbar-inner -->
  </div>
</header>
<div class="g_content" role="main">
  <% if flash[:notice] or flash[:error] or flash[:success] %>
      <div class="alert animated
        <% if flash[:success] then %>alert-success
        <% end %>
        <% if flash[:notice] then %>alert-info
        <% end %>
        <% if flash[:error] then %>alert-error
        <% end %>">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <% if flash[:error] and !flash[:notice] %>
            <%= raw flash[:error] %>
        <% end %>
        <%= raw flash[:notice] %>
        <%= raw flash[:success] %>
      </div>
  <% end %>
  <%= yield %>
</div>
<div id="footer">
</div>
<% if !current_user %>
    <div class="modal hide fade" id="user_signup">
      <div class="modal-body">
        <div class="top">
          <%= link_to(user_omniauth_authorize_path(:facebook), :class => "btn btn-primary btn-fb-large btn-large") do %>
              <div class="icon"><span></span><i class="icon-facebook"></i></div>
              <div class="divider"></div>
              Sign in with Facebook
          <% end %>
        </div>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f| %>

            <%= f.label "First name" %>
            <%= f.text_field :first_name %>

            <%= f.label "Last name" %>
            <%= f.text_field :last_name %>

            <%= f.label :email %>
            <%= f.email_field :email %>

            <%= f.label :password %>
            <%= f.password_field :password %>

            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>

            <%= f.label :privacy_policy, :class => 'checkbox' do %>
                <%= f.check_box :privacy_policy %>I agree to the <%= link_to "Privacy policy", privacy_path %>
            <% end %>
            </div>
            <div class="modal-footer">
              <%= f.submit "Sign up", :class => 'btn' %>
              <button data-dismiss="modal" class="cancel">Cancel</button>
            </div>
        <% end %>
        </div>
    </div>
    <div class="modal hide fade" id="user_login">
      <div class="modal-body">
        <div class="top">
          <%= link_to(user_omniauth_authorize_path(:facebook), :class => "btn btn-primary btn-fb-large btn-large") do %>
              <div class="icon"><span></span><i class="icon-facebook"></i></div>
              <div class="divider"></div>
              Sign in with Facebook
          <% end %>
        </div>
        <%= form_for(resource, :validate => true, :as => resource_name, :url => session_path(resource_name)) do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email, :autofocus => true %>

            <%= f.label :password %>
            <%= f.password_field :password %>

            <% if devise_mapping.rememberable? -%>
                <%= f.label :remember_me, :class => "checkbox" do %><%= f.check_box :remember_me %>Remember me
                <% end %>
            <% end -%>
            <a data-target="#forgot_password" data-toggle="modal">Forgot password?</a>
            </div>
            <div class="modal-footer">
              <%= f.submit "Login", :class => "btn" %>
              <button data-dismiss="modal" class="cancel">Cancel</button>
            </div>
        <% end %>
        </div>
    </div>
    <div class="modal hide fade" id="forgot_password">
      <div class="modal-body">
        <div class="top">
          <p>Forgot your password? No problem. Just enter your email address below and we'll send you a link that will
            allow you to change your password.</p>

          <p><a data-target="#user_login" data-toggle="modal">Nevermind, I remember it!</a></p>
        </div>
        <%= form_for(resource, :validate => true, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post}) do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email %>
            </div>
            <div class="modal-footer">
              <%= f.submit "Send", :class => 'btn' %>
              <button data-dismiss="modal" class="cancel">Cancel</button>
            </div>
        <% end %>
        </div>
    </div>
<% end %>
