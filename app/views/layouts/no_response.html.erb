		<div id="wrapper">
					<% if !user_signed_in? %><% else %>
			<script type="text/javascript">
			function hideDiv(){

			    if ($(window).width() < 1039) {
		            $(".search-query").addClass("search-pad");
		            $(".outer-tools").hide();
		            $(".inner-tools").show();
			            
			    }else{
			        $(".container").css("width", "980");
			        $(".search-query").removeClass("search-pad");
			        $(".inner-tools").hide();
			        $(".outer-tools").show();
			    }
			
			}
			$(document).ready(function () {
					//sidebar
					  //on load
					    hideDiv();
					
					    //on resize
					    $(window).resize(function(){
					        hideDiv();
					    });
		    });
		    </script>
		    <% end %>
		<!-- <%= image_tag "/images/beta.png", :alt => "BETA", :id => "beta-corner" %> -->
		<% if flash[:notice] or flash[:error] or flash[:success] %>
  		<div class="flash-outer <% if flash[:success] then %>flash-outer-success<% end %>" <% if flash[:disappear_after] then %>data-disappear-after="<%= flash[:disappear_after] %>"<% end %>>
    		<div id="flash-inner">
    		  <p>
    		  <% if flash[:error] and !flash[:notice] %>
      		  <%= raw flash[:error] %>
    		  <% end %>
    		  <%= raw flash[:notice] %>
    		  <%= raw flash[:success] %>
    		  </p>
    		</div>
    		<div class="flash-close"><i class="icon-remove"></i></div>
  		</div>
		<% end %>
