<% content_for :title do %>Profile settings<% end %>
<div class="row-fluid">
	<div class="span10 edit">
		<form>
			<h1>Profile settings</h1>
			<h2>Change Email</h2>
			<p>Your current email address is <strong><%= @user.email %></strong></p>
			<input type="text">
			<h2>Change name</h2>
			<p>Please note, you can only change your name a few times.</p>
			<input type="text" placeholder="<%= @user.first_name %>">
			<input type="text" placeholder="<%= @user.last_name %>">
			<h2>Change password</h2>
			<label>Current password</label>
			<input type="text">
			<div class="clearfix"></div>
			<div id="new_pass">
				<label>New password</label>
				<input type="text">
			</div>
			<div>
				<label>Confirm new password</label>
				<input type="text">
			</div>
			<h2>Email Notifications</h2>
			<p>You can change how often you receive emails for new releases, from the options provided below. We will only email you if there are new releases.</p>
			<div id="slider"></div>
			<ul>
				<li>Instant</li>
				<li class="daily">Daily</li>
				<li class="weekly">Weekly</li>
				<li class="fortnightly">Fortnightly</li>
				<li class="monthly">Monthly</li>
				<li class="never">Never</li>
			</ul>
			<input class="btn" type="submit" value="Save">
		</form>
	</div>
</div>
