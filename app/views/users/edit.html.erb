<% content_for :title do %>Profile Settings<% end %>
<div class="content content-pad-160-bottom">
	<h2 class="signika-txt top-header font-35">Profile Settings</h2>
	<div id="p-settings">
		<div id="change-email">
			<div class="font-15">
				<strong>Change Email</strong>
			</div>
			<br/>
			Your current email address is <strong><%= @user.email %></strong></ENTER>.
			<br/>
			<br/>
			<%= form_for(@user) do |f| %>
			<% if @user.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

				<ul>
					<% @user.errors.full_messages.each do |msg| %>
					<li>
						<%= msg %>
					</li>
					<% end %>
				</ul>
			</div>
			<% end %>
			<ul>
				<li>
					<%= f.label :email %>
					<%= f.text_field :email %>
				</li>
				<li id="change-email-submit-pad">
					<div class="o-button left p-settings-o-pad signika-font">
						<%= f.submit "Change Email" %>
						<span></span>
					</div>
				</li>
			</ul>
			<% end %>
			<%= form_for(@user) do |f| %>
		</div>
		<div class="clear"></div>
		<div id="email-notify">
			<div class="font-15">
				<strong>Email Notifications</strong>
			</div>
			<br/>
			You can change how often you receive emails for new releases, from the options provided below.
			The default setting is ‘Weekly’.
			<br/>
			<br/>
			<!--<form method="post" action="email_notify.php" onsubmit="" class="enform">-->
			<ul>
				<li class="radio-pad">
					<%= f.radio_button :email_frequency, :always %>
					<%= f.label :always %>
				</li>
				<li class="radio-pad">
					<%= f.radio_button :email_frequency, :daily %>
					<%= f.label :daily %>
				</li>
				<li class="radio-pad">
					<%= f.radio_button :email_frequency, :weekly %>
					<%= f.label :weekly %>
				</li>
				<li class="radio-pad">
					<%= f.radio_button :email_frequency, :fortnightly %>
					<%= f.label :fortnightly %>
				</li>
				<li>
					<!-- left so you have a frame of reference for what it used to be	<input class="form-text radio" type="radio" name="e-notify" id="monthly" />
					<label for="monthly">Monthly</label>-->
					<%= f.radio_button :email_frequency, :monthly %>
					<%= f.label :monthly %>
				</li>
				<div class="clear"></div>
				<div id="save-settings-submit-pad">
					<div class="o-button left p-settings-o-pad signika-font">
						<%= f.submit 'Save Email Changes' %>
						<span></span>
					</div>
				</div>
			</ul>
			<% end %>
		</div>
		<div class="clear"></div>
		<div id="change-password">
			<div class="font-15">
				<strong>Change Password</strong>
			</div>
			<br/>
			<%= form_for(@user) do |f| %>
			<ul>
				<li>
					<%= f.label :current_password %>
					<%= f.text_field :current_password %>
				</li>
				<br/>
				<li>
					<%= f.label :password %>
					<%= f.text_field :password %>
				</li>
				<li>
					<%= f.label :confirm %>
					<%= f.text_field :password %>
				</li>
				<li id="change-password-submit-pad">
					<div class="o-button left p-settings-o-pad signika-font">
						<%= f.submit 'Change Password' %>
						<span></span>
					</div>
				</li>
			</ul>
			<% end %>
		</div>
		<div class="clear"></div>
		<div id="delete-account">
			<div class="font-15">
				<strong>Delete Your Account</strong>
			</div>
			<br/>
			Your account, tracked artists and all personal details will be permanently removed.
			<div id="delete-submit-pad">
				<div class="o-button del-account-o-pad left signika-font">
					<%= button_to "Delete Account", { :action => "destroy", :id => @user.id },  :confirm => "Are you sure?", :method => :delete %>
					<span></span>
				</div>
			</div>
		</div>
	</div>
