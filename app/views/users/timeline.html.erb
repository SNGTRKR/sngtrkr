<% content_for :title do %>Your Timeline
<% end %>
<% content_for :description do %><%= current_user.first_name %>'s personalised timeline of artist releases, where they can view new and old releases while being able to listen to and buy tracks.
<% end %>
<div class="g_timeline">
	<div class="release recommend_artists">
    	<h2>Recommended artists</h2>
    	<div id="recommend_carousel" class="carousel slide">
		  <!-- Carousel items -->
		  <div class="carousel-inner">
		    <div class="active item">Slide 1</div>
		    <div class="item">Slide 2</div>
		    <div class="item">Slide 3</div>
		  </div>
		  <i data-target="#myCarousel" data-slide-to="0" class="active icon-circle"></i>
	      <i data-target="#myCarousel" data-slide-to="1" class="icon-circle"></i>
	      <i data-target="#myCarousel" data-slide-to="2" class="icon-circle"></i>
		</div>
    </div>
    <% if @timeline.empty? %>
        <%= render 'timeline/user_empty' %>
    <% else %>
          <%= render :partial => 'timeline/release', :collection => @timeline %>
    <% end %>
</div>
