<% content_for :title do %><%= @user.first_name %>'s profile<% end %>
<div class="g_two_col">
  <div class="g_sidebar">
      <div class="tabbable tabs-left profile-tabs g_fixed">
      	<%= image_tag '//graph.facebook.com/'+@user.fbid+'/picture?width=200&height=200' %>
      	<h1><%= @user.first_name + " " + @user.last_name %></h1>
      	<p>Bristol, United Kingdom</p>
        <ul id="myTab" class="nav nav-tabs nav-stacked each-tab">
          <li class="active">
            <a href="#tab1" data-toggle="tab"><i class="icon-screenshot"></i><%= @user.following.count %> trackings</a>
          </li>
          <li>
            <a href="#tab2" data-toggle="tab"><%= image_tag "/images/ppl_black.png", :class => "blk ppl"%><%= image_tag "/images/ppl_white.png", :class => "wht ppl"%><%= @app_friends.count %> friend<% if @app_friends.count > 1 %>s<% end %></a>
          </li>
        </ul>
        <div class="clearfix"></div>
        <%= link_to edit_user_registration_path(@user) do %><div class="btn"><i class="icon-pencil"></i>Edit</div><% end %>
      </div> 
  </div>
  <div class="g_main g_tabs">
            <div class="tab-content profile-tab-content" id="myTabContent">
          <div class="tab-pane active" id="tab1">
            <% if !@user.following.count.zero? %>
              <table class="table table-striped">
                <tbody>
                  <% @following.each do |artist_tracked| %>
                    <tr>
                      <td>
                        <%= link_to artist_path(artist_tracked) do %>
                          <img src="<%= artist_tracked.image :medium %>" class="image" height="75" width="75"/>
                        <% end %>
                            <%= link_to artist_path(artist_tracked) do %>
                              <%= artist_tracked.name %>
                            <% end %>
                            <span class="actions">
                              <div class="btn track">Track</div>
                              <div class="btn share share_artist" id="<%= artist_tracked.id %>" data-placement="bottom"><i class="icon-share"></i>Share</div>
                            </span>
                            <div class="art_pop_<%= artist_tracked.id %> art_pop">
                              <div class="share_content">
                                <div>
                                  <a href="#" title="Share on Facebook" onClick="MyWindow=window.open('https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.sngtrkr.com<%= url_for artist_tracked %>%2F&t=SNGTRKR','ShareSNGTRKRonFacebook','scrollbars=no,width=620,height=340'); return false;">
                                    <%= image_tag "/images/social/fb.png", :alt => "Facebook" %>
                                  </a>
                                  <a href="#" title="Share on Twitter" onClick="MyWindow=window.open('https://twitter.com/intent/tweet?original_referer=http%3A%2F%2Fwww.sngtrkr.com&text=<%= artist_tracked.name %>+is+using+SNGTRKR+to+keep+their+fans+up+to+date+with+releases.+Check+them+out+&#45;+www.sngtrkr.com<%= url_for artist_tracked %>&via=SNGTRKR','ShareSNGTRKRonTwitter','scrollbars=no,width=620,height=340'); return false;">
                                    <%= image_tag "/images/social/twitter.png", :alt => "Twitter" %>
                                  </a>
                                  <a href="#" title="Share on Tumblr" onClick="MyWindow=window.open('http://www.tumblr.com/share/link?url=http%3A%2F%2Fwww.sngtrkr.com<%= url_for artist_tracked %>&name=<%= artist_tracked.name %>&description=<%= artist_tracked.name %> online:<br/><% if artist_tracked.fbid? %>http://www.facebook.com/<%= artist_tracked.fbid %><br/><% end %><% if artist_tracked.twitter? %>http://www.twitter.com/<%= artist_tracked.twitter %><br/><% end %><% if artist_tracked.youtube? %>http://www.youtube.com/<%= artist_tracked.youtube %><br/><% end %><% if artist_tracked.soundcloud? %>http://www.soundcloud.com/<%= artist_tracked.soundcloud %><br/><% end %><% if artist_tracked.website? %><%= artist_tracked.website %><% end %>','Share on Tumblr','scrollbars=no,width=620,height=340'); return false;">
                                    <%= image_tag "/images/social/tb.png", :alt => "Tumblr" %>
                                  </a>
                                  <a href="#" title="Share on Google Plus" onClick="MyWindow=window.open('https://plus.google.com/share?url=http%3A%2F%2Fwww.sngtrkr.com<%= url_for artist_tracked %>','ShareSNGTRKRonGooglePlus','scrollbars=no,width=620,height=340'); return false;">
                                    <%= image_tag "/images/social/gplus.png", :alt => "Google+" %>
                                  </a>
                                </div>
                                <span>Link:</span>
                                <input type="text" onClick="this.select();" value="<%= root_url %><%= url_for(artist_tracked) %>">
                              </div>
                            </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% else %>
              <p>You are not tracking anyone.</p>
            <% end %>
          </div>
          <div class="tab-pane" id="tab2">
              <% if !@app_friends.empty? %>
                <% @app_friends.each do |friend| %>
                  <div>
                    <%= image_tag "//graph.facebook.com/"+friend.fbid+"/picture?width=75&height=75" %>
                    <span><%= friend.first_name + " " + friend.last_name %></span>
                    <%= Follow.where('user_id = ?',friend.id).count %> trackers
                  </div>
                <% end %>
              <% else %>
                <p>You have no friends</p>
              <% end %>
          </div>
        </div>
  </div>
</div>
