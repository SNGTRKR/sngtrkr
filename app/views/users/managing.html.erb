<% content_for :title do %>Manage an artist<% end %>
<div class="content content-pad-191-bottom">
	<h2 class="signika-txt top-header font-35">Manage an Artist</h2>

	<div id="manage-form">
		<div id="steps">
			<%= form_for [current_user, Manage.new], :remote => true do |f| %>
			<fieldset class="step">
				<div class="step-back manage-artist-step">
					<div class="step-left left">
						<% @manageable.each do |artist| %>
						<%= f.radio_button(:artist_id, artist.id) %>
						<%= f.label(:artist_id, artist.name) %>
						<!-- <%= image_tag ("//graph.facebook.com/"+artist.fbid+"/picture?type=small") %> -->
						<br/>
						<%= f.submit "Manage" %>
						<% end %>
					</div>
					<div class="step-right right">
						Please select the artist you wish to manage on SNGTRKR. We will then attempt to grab as much information from your Facebook fan page as possible.
						<br/>
						<br/>
						<strong>At least one field is required.</strong>
					</div>
					<div id="artist-line"></div>
					<div class="clear"></div>
				</div>
			</fieldset>
			
			<fieldset class="step">
				<div class="step-back manage-summary-step">
					<div class="step-left left">
						<ul>
							<li>
								<strong>Artist Name:</strong>
							</li>
							<li>
								<strong>Genre:</strong>
							</li>
							<li>
								<strong>Label:</strong>
							</li>
							<li>
								<strong>Bio:</strong>
							</li>
							<br/>
							</br/>
							<li>
								<strong>Website:</strong>
							</li>
							<li>
								<strong>Twitter:</strong>
							</li>
							<li>
								<strong>Soundcloud:</strong>
							</li>
							<li>
								<strong>Youtube:</strong>
							</li>
						</ul>
					</div>
					<div class="step-right right">
						Here is a summary of all the information you have entered for your artist profile. Please read over and check everything.
						<br/>
						<br/>
						If you wish to change anything, please use the menu below to return to previous stages. Once you are happy with your artist profile settings,  click the submit button below.
						<br/>
						<br/>
						<strong>If you would like information on how to get started with using your artist timeline, and adding new releases, then head on over to our help page.</strong>
						<div id="submit-pad">
							<div class="o-button right norm-o-pad signika-font">
								<input type="submit" name="submit" value="Submit" />
								<span></span>
							</div>
						</div>
					</div>
					<div id="summary-line"></div>
				</div>
			</fieldset>
			<% end %>
			<!-- AJAX FOR OTHER FORMS -->
		</div>
		<div id="navigation" style="display:none;">
			<ul>
				<li class="selected signika-font">
					<a href="#" class="manage-artist"><h3>1. Artist</h3><div class="white-tint"></div></a>
				</li>
				<li class="signika-font">
					<a href="#" class="manage-details"><h3>2. Details</h3></a>
				</li>
				<li class="signika-font">
					<a href="#" class="manage-picture"><h3>3. Picture</h3></a>
				</li>
				<li class="signika-font">
					<a href="#" class="manage-summary"><h3>4. Summary</h3></a>
				</li>
			</ul>
		</div>
		<div id="progress-bar">
			<div id="progress">
				<div class="percent instruct-font">
					25%
				</div>
			</div>
		</div>
	</div>
	<div id="ajax-form"></div>

	<script>
		$('#ajax-form').load('/artists/1/edit')
	</script>

