<% content_for :og_name, @release.name  
content_for :og_url, request.url  
content_for :og_image, File.join(@release.image.medium.url) 
content_for :og_description, "#{@release.name} by #{@artist.name}. Released #{@release.date.strftime("#{@release.date.day.ordinalize} %B %Y ")}"
content_for :og_id, @release.id.to_s  
content_for :og_type, "sngtrkr:release" 
%>
<% content_for :title do %><%= @release.name %> release information by <%= @artist.name %><% end %>
<% content_for :description do %><%= @release.name %> release information by <%= @artist.name %>. Released <%= @release.date.strftime("#{@release.date.day.ordinalize} %B %Y ") %> by <%= @release.label_name %> <% end %>
<% cache "artist_info/#{@artist.id}-#{@artist.updated_at}", expires_in: 12.hours do %>
<div class="g_three_col">
  <div class="g_sidebar">
    <div class="release_artist g_fixed">
      <div class="scrollable">
        <div class="scrollable_inner">
            <%= image_tag @artist.image.large %>
            <h2><%= link_to @artist.name, @artist %></h2>
            <h3><%= @artist.label_name %></h3>
          <% end %>
          <div class="trackers">
            <%= image_tag "/images/ppl_black.png" %>
            <span id="tracker-<%= @artist.id %>"><%= @artist.followers %></span> tracker<% if @artist.followers > 1 %>s<% end %>
          </div>
          <div class="releases">
            <%= image_tag "/images/release_blk.png" %>  
            <%= pluralize @release_count, "release" %>
          </div>
          <%= follow_button @artist %>
          <% cache "social_links/#{@artist.id}-#{@artist.updated_at}", expires_in: 1.week do %>
            <div class="btn share_artist share" data-placement="bottom" id="<%= @artist.id %>"><i class="icon-share"></i>Share</div>
              <ul>
                <% if @artist.fbid? %>
                <li><a href="http://www.facebook.com/<%= @artist.fbid %>" target="_blank"><%= image_tag "/images/social/fb.png" %><p>Facebook</p></a></li> 
                <% end %>
                <% if @artist.twitter? %>
                <li><a href="http://www.twitter.com/<%= @artist.twitter %>" target="_blank"><%= image_tag "/images/social/twitter.png" %><p>Twitter</p></a></li>
                <% end %>
                <% if @artist.youtube? %>
                <li><a href="http://www.youtube.com/<%= @artist.youtube %>" target="_blank"><%= image_tag "/images/social/yt.png" %><p>YouTube</p></a></li>
                <% end %>
                <% if @artist.soundcloud? %>
                <li><a href="http://www.soundcloud.com/<%= @artist.soundcloud %>" target="_blank"><%= image_tag "/images/social/sc.png" %><p>Soundcloud</p></a></li>
                <% end %>
                <% if @artist.website? %>
                <li><a href="http://<%= @artist.website %>" target="_blank"><%= image_tag "/images/social/www.png" %><p>Website</p></a></li>
                <% end %>
                <% if @artist.sd? %>
                <li><a href="<%= @artist.sd %>" target="_blank"><%= image_tag "/images/social/7d.png" %><p>7Digital</p></a></li>
                <% end %>
                <% if @artist.itunes? %>
                <li><a href="<%= @artist.itunes %>" target="_blank"><%= image_tag "/images/social/it.png" %><p>iTunes</p></a></li>
                <% end %>
              </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="g_main release_info"> 
    <% cache "release_info/#{@release.id}-#{@release.updated_at}", expires_in: 2.hours do %>
      <% if current_user %>
        <% if current_user.role? :admin %>
          <div class="image">
            <div class="front">
            <%= image_tag @release.image.large %>
            </div>
            <div class="back">
              <form>
                <p>Please only upload PNG and JPEG files, which do not exceed 1mb in size.</p>
                <% if @release.image? %>
                  <input type="file" id="upload">
                  <input type="button" class="btn-info btn" value="Replace" >
                <% else %>
                  <input type="file" id="upload">
                  <input type="button" class="btn-success btn" value="Upload">
                <% end %>
              </form>
            </div>
          </div>
        <% else %>
          <%= image_tag @release.image.large %>
        <% end %>
      <% else %>
        <%= image_tag @release.image.large %>
      <% end %>
      <div class="info">
        <h1><%= @release.name %></h1>
        <p class="tip" data-title="Label" data-placement="left"><i class="icon-tag"></i><% if @release.label_name? %><%= @release.label_name %><% else %><%= @artist.label_name %><% end %></p>
        <p class="tip" data-title="Release date" data-placement="left"><i class="icon-calendar"></i><%= @release.date.strftime("#{@release.date.day.ordinalize} %B %Y ") %></p>
        <div class="btn buy" data-placement="bottom" id="<%= @release.id %>">Buy</div>
        <div class="btn share_release share" data-placement="bottom" id="<%= @release.id %>"><i class="icon-share"></i>Share</div>
        <div class="btn report" data-toggle="modal" data-target="#reportModal">Report</div>
      </div>
      <div class="clearfix"></div>
      <% if !user_signed_in? %>
        <div id="release_signup">
          <p>Track <%= link_to @artist.name, @artist %> and others to keep up to date with new releases.</p>
          <%= link_to(user_omniauth_authorize_path(:facebook), :class => "btn btn-primary btn-fb-small") do %>
            <div class="icon"><span></span><i class="icon-facebook"></i></div><div class="divider"></div>Sign in with Facebook
          <% end %>
          <a data-toggle="modal" data-target="#user_signup" class="signup">
            <div class="btn btn-warning">Sign up</div>
          </a>
        </div>
      <% end %>
       <div class="clearfix"></div>
      <div id="related_releases">
        <h2>Related releases</h2>
        <% @releases.each do |release|
           if release == @release 
             next
           end
           %>
          <div class="related">
            <%= link_to [release.artist, release] do %>
                <img src="<%= release.image.medium %>" class="related_img" height="75" width="75"/>
            <% end %>
            <span>
              <div><%= link_to release.name, [release.artist, release] %></div>
              <%= release.label_name %><br/>
              <%= release.date.strftime("#{release.date.day.ordinalize} %B %Y ") %>
            </span>
            <div class="actions">
              <div class="btn buy" data-placement="bottom" id="<%= release.id %>">Buy</div>
              <div class="btn share_release share" data-placement="bottom" id="<%= release.id %>"><i class="icon-share"></i>Share</div>
            </div>
            <div class="buy_pop buy_pop_<%= release.id %>">
              <div class="buy_content">
                <% if release.itunes? %>
                  <%= link_to image_tag("/images/social/it.png", :alt => "iTunes", :title => "iTunes"), release.itunes, :target => "_blank" %>
                <% end %>
                <% if release.sdigital %>
                  <%= link_to image_tag("/images/social/7d.png", :alt => "7Digital", :title => "7Digital"), release.sdigital, :target => "_blank" %>
                <% end %>
              </div>
            </div>
            <div class="rel_pop rel_pop_<%= release.id %>">
              <div class="share_content">
                <div>
                  <a href="#" alt="Share on Facebook" onClick="MyWindow=window.open('https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.sngtrkr.com<%= url_for [release.artist, release] %>%2F&t=SNGTRKR','Share on Facebook','scrollbars=no,width=620,height=340'); return false;">
                    <%= image_tag "/images/social/fb.png", :alt => "Facebook" %>
                  </a>
                  <a href="#" title="Share on Twitter" onClick="MyWindow=window.open('https://twitter.com/intent/tweet?original_referer=http%3A%2F%2Fwww.sngtrkr.com<%= url_for [@artist, release] %>&text=<%= @artist.name %>+&#45;+<%= release.name %><% if release.label_name %>+released+on+<%= release.label_name %><% end %>+&#45;+www.sngtrkr.com<%= url_for [@artist, release] %>&via=SNGTRKR','Share on Twitter','scrollbars=no,width=620,height=340'); return false;">
                    <%= image_tag "/images/social/twitter.png", :alt => "Twitter" %>
                  </a>
                  <a href="#" title="Share on Tumblr" onClick="MyWindow=window.open('http://www.tumblr.com/share/link?url=http%3A%2F%2Fwww.sngtrkr.com<%= url_for [@artist, release] %>&name=<%= @artist.name %>+&#45;+<%= release.name %>&description=Release Date: <%= release.date.strftime("#{release.date.day.ordinalize} %B %Y ") %><% if release.label_name %><br/>Label:<%= release.label_name %><br/><% else %><br/><br/><% end %><%= @artist.name %> online:<br/><% if @artist.fbid? %>http://www.facebook.com/<%= @artist.fbid %><br/><% end %><% if @artist.twitter? %>http://www.twitter.com/<%= @artist.twitter %><br/><% end %><% if @artist.youtube? %>http://www.youtube.com/<%= @artist.youtube %><br/><% end %><% if @artist.soundcloud? %>http://www.soundcloud.com/<%= @artist.soundcloud %><br/><% end %><% if @artist.website? %><%= @artist.website %><% end %>','Share on Tumblr','scrollbars=no,width=620,height=340'); return false;">
                    <%= image_tag "/images/social/tb.png", :alt => "Tumblr" %>
                  </a>
                  <a href="#" title="Share on Google Plus" onClick="MyWindow=window.open('https://plus.google.com/share?url=http%3A%2F%2Fwww.sngtrkr.com<%= url_for [@artist, release] %>','Share on Google+','scrollbars=no,width=620,height=340'); return false;">
                    <%= image_tag "/images/social/gplus.png", :alt => "Google+" %>
                  </a>
                </div>
                <span>Link:</span>
                <input type="text" onClick="this.select();" value="<%= root_url %><%= url_for([release.artist, release]) %>">
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<% cache "release_popups/#{@release.id}-#{@release.updated_at}", expires_in: 2.hours do %>
  <div class="art_pop art_pop_<%= @artist.id %>">
