<% artist_page ||= 'false' %>

<div id="release <%= release.id %>" class="release">
  <div class="image">
    <img src="<%= release.image.large.url %>" height="181" width="181"/>
    <div></div>
  </div>
  <div class="info">
    <%= link_to [release.artist, release] do%><h2><%= release.name %></h2><% end %>
    <%= link_to release.artist do %><h3><%= release.artist.name %></h3><% end %>
  </div>
  <div class="actions">
    <span>
      <i class="icon-calendar"></i>
      <%= release.date.strftime(" %d/%m/%Y") %>
    </span>
    <span>
      <i class="icon-share"></i>
    </span>
    <span>
      <i class="icon-shopping-cart"></i></span>
  </div>
</div>