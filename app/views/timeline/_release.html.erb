<div id="release_<%= release.id %>" class="release <%= release_type %>">
  <%= link_to [release.artist, release], 'data-tracking' => 'true', 'data-tracking-category' => tracking_category, 'data-tracking-name' => "#{tracking_name}-release" do%>
    <div class="image">
      <img src="<%= release.image.large.url %>" height="181" width="181"/>
      <div></div>
    </div>
  <% end %>
  <div class="info">
    <%= link_to [release.artist, release], 'data-tracking' => 'true', 'data-tracking-category' => tracking_category, 'data-tracking-name' => "#{tracking_name}-release" do%><h2><%= release.name %></h2><% end %>
    <%= link_to release.artist, 'data-tracking' => 'true', 'data-tracking-category' => tracking_category, 'data-tracking-name' => "#{tracking_name}-artist" do %><h3><%= release.artist.name %></h3><% end %>
  </div>
  <div class="actions">
    <span class="act date">
      <i class="icon-calendar"></i>
      <%= release.date.strftime(" %d/%m/%Y") %>
    </span>
    <span class="share_release share act" id="<%= release.id %>" data-tracking="true" data-tracking-category="<%= tracking_category %>" data-tracking-name="<%= tracking_name %>-share">
      <i class="icon-share-alt"></i>
    </span>
    <span class="buy act" id="<%= release.id %>" data-tracking="true" data-tracking-category="<%= tracking_category %>" data-tracking-name="<%= tracking_name %>-buy">
      <i class="icon-shopping-cart"></i>
    </span>
  </div>
  <%= buy_popover release %>
  <%= release_popover release, release.artist %>
</div>