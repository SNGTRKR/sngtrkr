$("a.remove-trkr").bind("ajax:complete", function () {
    var artist_id = $(this).data("id");
    var user_id = <%= current_user.id %>;
    $(this).replaceWith("<%=j follow_button(@artist) %>");
    $('#tracking-' + user_id).text(<%= current_user.followed_artists.count %>);
    $('#tracker-' + artist_id).text(<%= @artist.followers %>);
    $('#row-' + artist_id).addClass("fadeOutUp").slideUp();
});
$("a.remove-trkr-small").bind("ajax:complete", function () {
    var artist_id;
    artist_id = $(this).data("id");
    $(this).replaceWith("<%=j follow_button(@artist) %>");
});