          <%= f.text_field :email, :class => "required email form-text beta-input font-15", :placeholder => "Enter email address..." %>
      </div>
      	<div id="mce-responses" class="clear">
      		<div class="response" id="mce-error-response" style="display:none"></div>
      		<div class="response" id="mce-success-response" style="display:none"></div>
      	</div>	<div id="beta-submit"><div class="clear">
        <div class="o-button norm-o-pad left signika-font">
          <%= f.submit "Sign up for beta", :id => "mc-embedded-subscribe", :class => "font-13" %>
          <span></span>
        </div>
      	</div>
      	</div>
      <% end %>
</div>
