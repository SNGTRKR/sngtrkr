<div class="content content-pad-115-bottom">
  <% if @beta_user.errors.any? %>
      <% @beta_user.errors.full_messages.each do |msg| %>
        <script language="Javascript">
	    <!--
	    alert ("Sorry, we encountered an error processing this email: <%= msg %>")
	    //-->
	    </script>
      <% end %>
  <% end %>
  <% if flash[:notice] %>
  <script language="Javascript">
	    <!--
	    alert ("Thank you for signing up to SNGTRKR beta, you will receive a confirmation email soon.")
	    //-->
	    </script>
  <% end %>
